<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OZE_projekt.DevicePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#B38FFF" CornerRadius="0">
                <Label Text="Ustawienia" FontSize="50" TextColor="White" HorizontalTextAlignment="Center" />
            </Frame>
            <ScrollView>
                <StackLayout>
                    <StackLayout>
                        <Label x:Name="DeviceNameLabel" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" />
                        <Label x:Name="DeviceIdLabel" FontSize="29" TextColor="Black" HorizontalTextAlignment="Center" />
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>